@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    
    <main>
        <div class="top-row px-4">
            <a href="/login">Zaloguj</a>
            <AuthorizeView>
              
                <NotAuthorized><a href="/Register">Zarejestruj</a></NotAuthorized>

                <Authorized><a href="/logout">Wyloguj</a></Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
